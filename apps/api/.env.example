# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/brail

# Encryption (generate with: node scripts/generate-key.js)
SECRET_KEY_256=your-64-char-hex-key-here
SESSION_SECRET=your-random-session-secret-here

# MinIO/S3 Storage
MINIO_ENDPOINT=http://localhost:9000
MINIO_USE_SSL=false
MINIO_FORCE_PATH_STYLE=true
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=brail-deploys

# API Configuration
DEV_PUBLIC_BASE=http://localhost:3000
PORT=3000
NODE_ENV=development
WEB_URL=http://localhost:3001

# Email (optional)
# RESEND_API_KEY=your-resend-key-here

# Registry
REGISTRY_BASE_URL=https://registry.brail.io

# Organization
ENABLE_ORGS=false

# Public domain (for deployments)
PUBLIC_HOST=localhost

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# Resend
# RESEND_API_KEY=your-resend-api-key-here
